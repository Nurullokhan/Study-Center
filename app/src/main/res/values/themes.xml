<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StudyCenter" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.StudyCenter" parent="Base.Theme.StudyCenter" />
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/selector_nav_item_icon</item>
        <item name="itemTextColor">@color/selector_nav_item_text</item>
        <item name="itemIconSize">24dp</item> <!-- Adjust icon size as needed -->
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.Inactive</item>
        <item name="backgroundTint">@color/custom_background_color</item>
    </style>

    <!-- Active text appearance -->
    <style name="BottomNavigationView.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Inactive text appearance -->
    <style name="BottomNavigationView.Inactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

</resources>